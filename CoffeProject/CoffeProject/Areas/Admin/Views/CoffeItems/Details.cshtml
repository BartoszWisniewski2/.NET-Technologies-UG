@model CoffeProject.Models.CoffeItem

@{
    ViewData["Title"] = "Details";
}
<br />
<br />


<form method="post" asp-action="Create" enctype="multipart/form-data">

    <div class="border backgroundWhite">

        <fieldset disabled>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Quantity" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Description" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Description" class="form-control" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Price" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Price" class="form-control" data-val="false" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Manufacturer.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Manufacturer.Name" class="form-control" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="CoffeType.Name" class="custom-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="CoffeType.Name" class="form-control" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="MinimumBestBeforeDate" class="control-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="MinimumBestBeforeDate" class="form-control" />
                </div>
                <span asp-validation-for="MinimumBestBeforeDate" class="text-danger"></span>
            </div>

        </fieldset>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToListButton" model="Model.Id" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
